<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="6dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/brackground_gradient_cards"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_repository"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_repository"
            android:tint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/image_view_avatar"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="okhttp"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/image_view_repository"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_person"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/image_view_repository"
            app:layout_constraintTop_toBottomOf="@id/text_view_name"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="square"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="17sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/image_view_author"
            app:layout_constraintTop_toTopOf="@+id/image_view_author"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_code_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_code_fork"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/image_view_author"
            app:layout_constraintTop_toBottomOf="@id/image_view_author"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_amount_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="8267"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/image_view_code_fork"
            app:layout_constraintTop_toTopOf="@+id/image_view_code_fork"
            app:layout_constraintBottom_toBottomOf="@id/image_view_code_fork"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:tint="@color/white"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@+id/text_view_amount_fork"
            app:layout_constraintTop_toTopOf="@id/image_view_code_fork"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_amount_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="8267"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/image_view_stars"
            app:layout_constraintTop_toTopOf="@+id/text_view_amount_fork"
            app:layout_constraintBottom_toBottomOf="@id/text_view_amount_fork"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
